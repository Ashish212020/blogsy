<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
    <title>Homepage</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <div class="container py-5">
    <h1 class="mb-4 fw-bold text-center" style="letter-spacing:1px;">Latest Blogs</h1>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
      <% blogs.forEach(blog => { %>
      <div class="col d-flex align-items-stretch">
        <div class="card w-100">
          <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover" />
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-3 fw-semibold" style="min-height:3rem;"><%= blog.title %></h5>
            <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto w-100">Read More</a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <%- include('./partials/scripts') %>
</body>
</html>